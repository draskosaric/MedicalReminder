<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/label_number_of_alarms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/label_number_of_alarms"
        />
    
    <TextView
        android:id="@+id/number_of_alarms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/label_number_of_alarms"
        />
    
    <ListView
        android:id="@+id/list_of_alarms"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/label_number_of_alarms"
        ></ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_number_of_alarms"
        />

</RelativeLayout>